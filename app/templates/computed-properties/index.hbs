<div class="row">
  <div class="col s12  thin-inputs">
    {{#md-card-collapsible accordion=false}}
      {{#md-collapsible icon="mdi-action-settings" title="Configuration"}}
        <div class="row">
          <div class="col s4">{{md-input type="number" label="Tax (%)" value=taxPercent}}</div>
          <div class="col s4">{{md-input type="number" label="Tip (%)" value=tipPercent}}</div>
          <div class="col s4">{{md-input type="number" label="Discount ($)" value=discount}}</div>
        </div>
      {{/md-collapsible}}
    {{/md-card-collapsible}}
  </div>
</div>

<div class="row">
  <div class="col m8">
    {{#md-card title="Menu"}}
      {{#md-card-content}}
        <table>
          {{#each menuItems as |menuItem|}}
          <tr>
            <td width=100>
              <button class="btn btn-flat" {{action 'addMenuItem' menuItem}}>Add</button>
            </td>
            <td>{{menuItem.name}}</td>
            <td width=150 class="text-right">{{nice-currency menuItem.unitPrice}}</td>
          </tr>
          {{/each}}
        </table>
      {{/md-card-content}}
    {{/md-card}}
  </div>
  <div class="col m4">
    {{#md-card title="Order"}}
      {{#md-card-content}}
        <table>
          {{#each order as |orderItem|}}
            <tr>
              <td width=100>
                <button class="btn btn-flat" {{action 'removeOrderItem' orderItem}}>&times;</button>
              </td>
              <td>{{orderItem.name}}</td>
              <td width=150 class="text-right">{{nice-currency orderItem.price}}</td>
            </tr>
          {{/each}}
          <tfoot>
            <tr>
              <td colspan=2 class="text-right">Subtotal</td>
              <td class="text-right">{{nice-currency subtotal}}</td>
            </tr>
            <tr>
              <td colspan=2 class="text-right">Tip</td>
              <td class="text-right">{{nice-currency tipAmount}}</td>
            </tr>
            <tr>
              <td colspan=2 class="text-right">Tax</td>
              <td class="text-right">{{nice-currency taxAmount}}</td>
            </tr>
            <tr>
              <td colspan=2 class="text-right">Grand Total</td>
              <td class="text-right">{{nice-currency totalAmount}}</td>
            </tr>
          </tfoot>
        </table>
      {{/md-card-content}}
    {{/md-card}}
  </div>
</div>